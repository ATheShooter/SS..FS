<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body data-spy="scroll" data-target=".site-navbar-target" data-offset="300" content="width=device-width,initial-scale=1, shrink-to-fit">


    <div class="site-wrap" id="home-section">

        <div class="site-mobile-menu site-navbar-target">
            <div class="site-mobile-menu-header">
                <div class="site-mobile-menu-close mt-3">
                    <span class="icon-close2 js-menu-toggle"></span>
                </div>
            </div>
            <div class="site-mobile-menu-body"></div>
        </div>


        <header class="site-navbar js-sticky-header site-navbar-target" role="banner">

            <div class="container">
                <div class="row align-items-center position-relative">


                    <div class="site-logo">
                        <p class="text-black"> @Html.ActionLink("S S..F S", "Index", "Home", new { area = "" }, new { @class = "text-primary" })</p>
                    </div>

                    <nav class="site-navigation text-center ml-auto" role="navigation">

                        <ul class="site-menu main-menu js-clone-nav ml-auto d-none d-lg-block">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                            <li>@Html.ActionLink("Teams", "Teams", "Home")</li>
                            <li>@Html.ActionLink("Donate", "Donate", "Home")</li>

                        </ul>
                    </nav>



                    <div class="toggle-button d-inline-block d-lg-none"><a href="#" class="site-menu-toggle py-5 js-menu-toggle text-black"><span class="icon-menu h3"></span></a></div>

                </div>
            </div>

        </header>




        <div class="site-wrap" id="home-section">
            <div class="owl-carousel slide-one-item">
                <a href="#"><img src="~/images/hands-ysr.jpg" alt="Image" class="img-fluid"></a>
                <a href="#"><img src="~/images/Qatar-pearl.jpg" alt="Image" class="img-fluid"></a>
                <a href="#"><img src="~/images/Whole-city.jpg" alt="Image" class="img-fluid"></a>
            </div>


            @RenderBody()
            <hr />
            <footer class="site-footer">
                <div class="container">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="row">
                                <div class="col-md-8">
                                    <h2 class="footer-heading mb-4">About Us</h2>
                                    <p>S S .. F S (Supportive Society .. Fruitfull Seed) where we plant the smiles around the world and be a lesson to others to join us and be a planter. </p>
                                </div>
                                <div class="col-md-4 ml-auto">
                                    <h2 class="footer-heading mb-4">Features</h2>
                                    <ul class="list-unstyled">
                                        <li>@Html.ActionLink("About Us", "About", "Home")</li>
                                        <li><a href="#">Testimonials</a></li>
                                        <li><@Html.ActionLink("Conatct US", "Conatct", "Home")</li>
                                    </ul>
                                </div>

                            </div>
                        </div>
                        <div class="col-md-4 ml-auto">

                            <div class="mb-5">
                                <div class="mb-5">
                                    <h2 class="footer-heading mb-4">Target</h2>
                                    <p>Our mission to make the world better by spreading the happiness and smiles to people who are suffering in this world subscribe down for more news.</p>
                                </div>
                                <h2 class="footer-heading mb-4">Subscribe to get more news</h2>
                                <form action="#" method="post">
                                    <div class="input-group mb-3">
                                        <input type="text" class="form-control border-secondary text-white bg-transparent" placeholder="Enter Email" aria-label="Enter Email" aria-describedby="button-addon2">
                                        <div class="input-group-append">
                                            <button class="btn btn-primary text-white" type="button" id="button-addon2">Subscribe</button>
                                        </div>
                                    </div>
                            </div>


                            <h2 class="footer-heading mb-4">Follow Us</h2>
                            <a href="#about-section" class="smoothscroll pl-0 pr-3"><span class="icon-facebook"></span></a>
                            <a href="#" class="pl-3 pr-3"><span class="icon-twitter"></span></a>
                            <a href="#" class="pl-3 pr-3"><span class="icon-instagram"></span></a>
                            </form>
                        </div>
                    </div>
                    <div class="row pt-5 mt-5 text-center">
                        <div class="col-md-12">
                            <div class="border-top pt-5">
                                <p>

                                </p>
                            </div>
                        </div>

                    </div>
                </div>
            </footer>
            </div>

            @Scripts.Render("~/bundles/jquery")
            @Scripts.Render("~/bundles/bootstrap")
            @Scripts.Render("~/bundles/js")
            @RenderSection("scripts", required: false)
</body>
</html>











